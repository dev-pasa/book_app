<!DOCTYPE html>
<html>
  <head>
    <%- include('../../layout/head') %>
  </head>
  <body>
    <header>
      <%- include('../../layout/header') %>
    </header>
    <main>
        <div class="main-books" id="main-header"><h2>Search by Title or Author</h2></div>
      <form action="/searches" method="post">
        <input type="text" name="search" placeholder="Enter a title or author" id="search-input" required>
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="radio" name="search" value="title" required>
          </label>
        </fieldset>
        <fieldset >
          <label for="author">
            <span id="author">Author</span>
            <input type="radio" name="search" value="author" required>
          </label>
        </fieldset>
        <button type="submit" id="search-button">Search the Google Books API</button>
      </form>
    </main>
  </body>
</html>